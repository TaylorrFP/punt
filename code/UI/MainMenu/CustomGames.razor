@using Sandbox
@using Sandbox.UI
@using System
@using System.Threading.Tasks

@implements INavigatorPage
@namespace Facepunch.UI

<root class="mainmenu">

    <title>Punt!</title>

    <div class="options">
        <!-- Regular Play Button -->
        <div class="button" onclick=@(async () => { @* QueueManager.Instance.CreateLobby(QueueType.Solo); *@ await QueueManager.Instance.StartSearching(QueueType.Solo); })>
            Create Game
        </div>

        <!-- WIP Style for Duos and Custom Games -->
        <div class="button" onclick=@(async () => { @* QueueManager.Instance.CreateLobby(QueueType.Duo) *@; await QueueManager.Instance.StartSearching(QueueType.Duo); })>
            Browse Games
        </div>

        <a class="button" href="">Back</a>
    </div>
</root>

@code
{
    private void DebugPlay()
    {
        Scene.LoadFromFile("scenes/networktestscene.scene");
    }
}
